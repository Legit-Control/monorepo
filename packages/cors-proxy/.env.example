# Server Configuration
NODE_ENV=development
PORT=9999
LOG_LEVEL=info

# CORS Configuration
CORS_ORIGIN=*

# RSA Keys (required for production)
# Generate with: openssl genrsa -out private.pem 2048
# openssl rsa -in private.pem -pubout -out public.pem

# New naming (recommended):
ACCESS_SERVICE_PUB_KEY=
PROXY_SERVICE_PRIVATE_KEY=

# Legacy naming (still supported for backward compatibility):
# RSA_PUBLIC_KEY=
# RSA_PRIVATE_KEY=

# JWT Configuration
JWT_ALGORITHM=RS256

# Git Service URLs
GITHUB_API_URL=https://api.github.com
GITLAB_API_URL=https://gitlab.com

# Optional: Rate Limiting (requests per minute per user)
RATE_LIMIT_PER_MINUTE=100

# Optional: Request Timeout (milliseconds)
REQUEST_TIMEOUT=30000